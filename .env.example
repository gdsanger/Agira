# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Field Encryption Key (for encrypted model fields)
# Generate a new key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=D_GzCwyVvkyI1o5qUh9rle_JPKAghlTxDGTfC3RRmB4=

# Database Configuration
# Choose between SQLite (development) or PostgreSQL (production)

# Option 1: SQLite (for development/testing)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Option 2: PostgreSQL (for production - uncomment and configure)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=agira
# DB_USER=agira_user
# DB_PASSWORD=your-db-password-here
# DB_HOST=localhost
# DB_PORT=5432

# Weaviate Configuration (Optional - configure via Django Admin)
# Note: These are stored in database and configured via Django Admin interface
# For local Weaviate installation, configure in Admin UI:
# - URL: http://192.168.1.100 (or your Weaviate instance IP/hostname)
# - HTTP Port: 8081 (default: 8080, local installs often use 8081)
# - gRPC Port: 50051 (default: 50051)
# - API Key: Leave empty for local installations without authentication
# - Enabled: Check to enable Weaviate integration

# Azure AD / MSAL Configuration (Optional - for SSO Login)
# To use Azure AD SSO, configure these settings:
AZURE_AD_TENANT_ID=your-tenant-id-here
AZURE_AD_CLIENT_ID=your-client-id-here
AZURE_AD_CLIENT_SECRET=your-client-secret-here
AZURE_AD_REDIRECT_URI=http://localhost:8000/auth/azuread/callback/
# Default role for auto-provisioned users (User, Agent, Approver, ISB, Management)
AZURE_AD_DEFAULT_ROLE=User
# Enable Azure AD SSO (True/False)
AZURE_AD_ENABLED=False

# Embed Portal Configuration
# Comma-separated list of domains allowed to embed the customer portal in iframes
# Example: https://app.ebner-vermietung.de,https://example.com
EMBED_ALLOWED_ORIGINS=https://app.ebner-vermietung.de

# Redis Cache Configuration (Optional - for AI Agent Response Cache)
# Enable Redis caching for AI agent responses to reduce costs and improve performance
REDIS_CACHE_ENABLED=False
REDIS_CACHE_HOST=localhost
REDIS_CACHE_PORT=6379
REDIS_CACHE_DB=0
REDIS_CACHE_PASSWORD=
REDIS_CACHE_SOCKET_TIMEOUT=5
REDIS_CACHE_SOCKET_CONNECT_TIMEOUT=5
